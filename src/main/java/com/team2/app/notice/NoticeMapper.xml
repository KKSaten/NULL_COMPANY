<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.team2.app.notice.NoticeMapper">
	
	<select id="getList" resultType="NoticeVO">
		SELECT * FROM NOTICE_BOARD
	</select>
	
	<select id="getPost" resultType="NoticeVO" parameterType="NoticeVO">
		SELECT * FROM NOTICE_BOARD
		WHERE NOTICE_NUM = #{noticeNum}
	</select>
	
	<insert id="writePost" parameterType="NoticeVO">
		INSERT INTO NOTICE_BOARD
			(NOTICE_NUM, EMP_NUM, NOTICE_TITLE, NOTICE_CONTENTS, NOTICE_HIT, NOTICE_DATE)
		VALUES
			(NULL, #{empNum}, #{noticeTitle}, #{noticeContents}, 0, now())
	</insert>

</mapper>